{
    "name": "archict/core",
    "description": "Heart of Archict, this library load and manage Bricks",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Archict\\Core\\": "include/"
        }
    },
    "require": {
        "php": ">= 8.2",
        "composer-runtime-api": "^2.2",
        "archict/brick": "^0",
        "composer/class-map-generator": "^1.1",
        "azjezz/psl": "^2.9",
        "cuyz/valinor": "^1.12",
        "symfony/yaml": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Archict\\Core\\": ["tests/unit", "tests/lib"]
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.22",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.9",
        "slevomat/coding-standard": "^8.15"
    },
    "scripts": {
        "unit-test": "phpunit --testsuite unit",
        "phpstan": "phpstan analyse -c phpstan.neon",
        "psalm": "psalm -c psalm.xml",
        "phpcs": "phpcs include tests"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
